# 启用评论系统候选
  candidates:
    - giscus   # 使用 giscus（基于 GitHub Discussions）

giscus:
  repo: 1231Lisette/01paw               # 你的仓库
  repo-id: R_kgDONzMlDQ                 # 仓库 ID（giscus.app 生成）
  category: General                     # Discussions 分类名
  category-id: DIC_kwDONzMlDc4CuuKh     # 分类 ID（giscus.app 生成）
  mapping: pathname                     # 评论和页面映射方式（推荐 pathname）
  strict: 0                             # 是否严格匹配（0=否，1=是）
  reactions-enabled: 1                  # 启用表情回应
  emit-metadata: 0                      # 是否注入元数据
  input-position: bottom                # 输入框在底部（top=顶部，bottom=底部）
  theme: preferred_color_scheme         # 主题：跟随系统（也可设 light / dark）
  lang: zh-CN                           # 界面语言：中文

