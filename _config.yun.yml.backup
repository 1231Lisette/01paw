# --------------------------
# 自定义 head 资源 + 百度统计
# --------------------------
head:
  css:
    example: //example.min.css
  js:
    base:
      - xxx
  cdn:
    pre:
      development: ''
      production: https://cdn.jsdelivr.net/gh/1231Lisette/01paw@latest
    js:
      async:
        iconfont: //at.alicdn.com/t/font_1140697_dxory92pb0h.js
  style:
    - /css/hexo-theme-yun.css
  script:
    - /js/hexo-theme-yun.js
  prefetch:
    script:
      - /js/sidebar.js
  dns_prefetch:
    - https://cos.yunyoujun.cn
  preconnect:
    - https://cdn.jsdelivr.net
  font:
    cdn:
      enable: false
    serif:
      family: "'Noto Serif SC','Songti SC','STZhongsong','STKaiti','KaiTi','serif'"
      weight: 900
    sans_serif:
      family: "'Noto Sans SC','PingFang SC','Microsoft YaHei','Roboto','Arial','sans-serif'"
      weight: 400
    monospace:
      family: "'Source Code Pro','Courier New','Courier','Consolas','Monaco','monospace'"

inject:
  head: |
    <!-- 百度统计 -->
    <script>
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "https://hm.baidu.com/hm.js?你的百度统计ID";
      var s = document.getElementsByTagName("script")[0]; 
      s.parentNode.insertBefore(hm, s);
    })();
    </script>


